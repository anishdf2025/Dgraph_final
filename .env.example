# ==========================================
# LEGAL JUDGMENT DATABASE CONFIGURATION
# ==========================================
# Copy this file to .env and customize your values
# DO NOT commit .env to version control!

# ==========================================
# ELASTICSEARCH CONFIGURATION
# ==========================================
ELASTICSEARCH_HOST=http://localhost:9200
ELASTICSEARCH_INDEX=graphdb
ELASTICSEARCH_TIMEOUT=30

# ==========================================
# DGRAPH CONFIGURATION
# ==========================================
DGRAPH_HOST=dgraph-standalone:9080
DGRAPH_ZERO=dgraph-standalone:5080

# ==========================================
# OUTPUT CONFIGURATION
# ==========================================
RDF_OUTPUT_FILE=judgments.rdf
RDF_SCHEMA_FILE=rdf.schema

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=rdf_generator.log

# ==========================================
# PROCESSING CONFIGURATION
# ==========================================
MAX_DOCUMENTS=10000
BATCH_SIZE=100

# ==========================================
# REDIS CONFIGURATION (for Celery)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==========================================
# FASTAPI CONFIGURATION
# ==========================================
# Host to bind the FastAPI server (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
FASTAPI_HOST=0.0.0.0
# Port for the FastAPI server
FASTAPI_PORT=8003
# Enable auto-reload in development (true/false)
FASTAPI_RELOAD=true

# ==========================================
# AUTO PROCESSING CONFIGURATION
# ==========================================
# Interval in seconds to check for new documents (default: 60 seconds = 1 minute)
AUTO_PROCESS_INTERVAL=60

# ==========================================
# DOCKER CONFIGURATION
# ==========================================
# Docker network name for Dgraph containers
DOCKER_NETWORK=dgraph-net
# Dgraph Docker image version
DGRAPH_IMAGE=dgraph/dgraph:v23.1.0

# ==========================================
# EXCEL UPLOAD CONFIGURATION
# ==========================================
# Path to the Excel file containing legal judgment data
EXCEL_FILE_PATH=/home/anish/Desktop/Anish/Dgraph_final/excel_2024_2025/FINAL/5_sample/tests.xlsx

# ==========================================
# NOTES
# ==========================================
# - Change FASTAPI_PORT if 8003 is already in use
# - For production, set FASTAPI_HOST=0.0.0.0 and FASTAPI_RELOAD=false
# - Adjust AUTO_PROCESS_INTERVAL based on your needs (e.g., 300 for 5 minutes)
# - Update EXCEL_FILE_PATH to point to your actual Excel file
